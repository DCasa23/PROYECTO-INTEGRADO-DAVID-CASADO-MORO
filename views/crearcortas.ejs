<!doctype html>
<html lang="en">

<head>
    <%- include("template/head.ejs")%>
    <link rel="stylesheet" type="text/css" href="../css/crearproyectos.css" />
    <
</head>

<body>
    <%- include("template/header.ejs")%>
    <main class="container-fluid p-0 mb-0">

        <%- include("template/navleft.ejs")%>


        <div class="float-start ms-0 row justify-content-center col-8 col-lg-8 col-md-9 col-sm-9 text-center">

            <div class="h-100 m-3 col-11 float-none col-center border border-dark border-2 overflow-hidden"
                style=" background-color:#eee8cd;max-height: 1200px;">
                <div class=" row border border-dark border-end-0 border-top-0 border-start-0">
                    <div class="col-center pt-4 pb-md-3 pb-sm-3 pb-3 pb-lg-3">
                        <span class="fs-5 fw-bold">Crear Cortas</span>
                    </div>

                </div>
                <div class="col-12 mt-3" style="max-height: 1100px;">
                    <input id="textoPerfil" class="col-12 col-sm-12 col-md-8 col-lg-9 btn btn-info my-2"
                        placeholder="Nombre del Tema"></input>

                    <ul class="mb-3 list-unstyled">
                        <ul class="mb-3 list-unstyled">
                            <span>Duración de la Prueba</span>
                            <li class="col-center col-12 col-sm-12 col-md-4 col-lg-3"><input id="unica"
                                    name="tipopregunta" type="radio" value="unica" checked="checked">Sin
                                duración</input>
                            </li>
                            <li class="col-center col-12 col-sm-12 col-md-4 col-lg-3"><input id="unica"
                                    name="tipopregunta" type="radio" value="unica" checked="checked">15 minutos</input>
                            </li>
                            <li><input id="tf" name="tipopregunta" type="radio" value="tf">30 minutos</input></li>
                            <li><input id="varias" name="tipopregunta" type="radio" value="varias"> 60 minutos</input>
                            </li>
                        </ul>
                        <li class="row col-12 m-0 py-3"><input id="textoPreguntas"
                                class="col-12 col-sm-12 col-md-12 col-lg-12 btn btn-success my-2"
                                placeholder="Escribir Primera Pregunta Corta"></input></li>
                        <li class="row col-12 m-0 py-3"><input id="textoPreguntas"
                                class="col-12 col-sm-12 col-md-12 col-lg-12 btn btn-success my-2"
                                placeholder="Escribir Segunda Pregunta Corta"></input></li>
                        <li class="row col-12 m-0 py-3"><input id="textoPreguntas"
                                class="col-12 col-sm-12 col-md-12 col-lg-12 btn btn-success my-2"
                                placeholder="Escribir Tercera Pregunta Corta"></input></li>
                        <li class="row col-12 m-0 py-3"><input id="textoPreguntas"
                                class="col-12 col-sm-12 col-md-12 col-lg-12 btn btn-success my-2"
                                placeholder="Escribir Cuarta Pregunta Corta"></input></li>
                        <li class="row col-12 m-0 py-3"><input id="textoPreguntas"
                                class="col-12 col-sm-12 col-md-12 col-lg-12 btn btn-success my-2"
                                placeholder="Escribir Quinta Pregunta Corta"></input></li>


                    </ul>
                </div>
            </div>
            <div class="row form-inline my-2 my-lg-0 justify-content-around">
                <button class="col-12 col-sm-12 col-md-12 col-lg-3 btn btn-success my-2" type="submit">Volver a
                    Inicio</button>
                <button class="col-12 col-sm-12 col-md-12 col-lg-3 btn btn-success my-2" type="submit">Añadir
                    Pregunta</button>
                <button class="col-12 col-sm-12 col-md-12 col-lg-3 btn btn-success my-2 px-1 my-2"
                    type="submit">Finalizar</button>
            </div>

        </div>




        <%- include("template/navright.ejs")%>




    </main>
    <%- include("template/footer.ejs")%>
</body>

</html>